<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="?attr/xui_config_content_spacing_horizontal"
    android:orientation="vertical">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/user_photo"/>
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15dp"
            />
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ViewName"
            android:hint="姓名"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PhoneNumber"
            android:textSize="15dp"
            />
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ViewPhoneNumber"
            android:hint="手机号码"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WeChat"
            android:textSize="15dp"
            />
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ViewWeChat"
            android:hint="微信账号"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WeiBo"
            android:textSize="15dp"
            />
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ViewWeiBo"
            android:hint="微博ID"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ"
            android:textSize="15dp"
            />
        <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ViewQQ"
            android:hint="QQ账号"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
            android:gravity="center"
            >
            <com.xuexiang.xui.widget.button.RippleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/xui_config_content_spacing_horizontal"
                app:rv_type="doubleRipple">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="?attr/xui_config_content_spacing_horizontal"
                    android:layout_marginEnd="?attr/xui_config_content_spacing_horizontal"
                    android:background="#EF5362"
                    android:gravity="center"
                    android:text="收藏"
                    android:id="@+id/collection"
                    android:textColor="@color/xui_config_color_white"
                    android:textSize="20sp" />

            </com.xuexiang.xui.widget.button.RippleView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>